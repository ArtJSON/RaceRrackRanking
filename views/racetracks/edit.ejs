<% layout('layouts/boilerplate') %>

<div class="form-wrapper-md min-full-screen">
  <form
    class="form"
    action="/racetracks/<%= racetrack.id %>?_method=PATCH"
    method="POST"
    novalidate
    class="validated-form"
  >
    <h1 class="form-title">
      Edit the data of
      <span class="text-primary-green"><%= racetrack.name %></span>
    </h1>
    <div class="form-group">
      <label class="form-label" for="name">Enter the name: </label>
      <input
        class="form-control"
        type="text"
        id="name"
        name="racetrack[name]"
        value="<%= racetrack.name %>"
        required
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="location">Enter the location: </label>
      <input
        class="form-control"
        type="text"
        id="location"
        name="racetrack[location]"
        value="<%= racetrack.location %>"
        required
      />
    </div>

    <div class="input-group form-group">
      <label class="form-label" for="pricePerLap"
        >Enter the price per lap:
      </label>
      <span class="currency-code bold">$</span>
      <input
        class="form-control"
        type="number"
        step="0.01"
        id="pricePerLap"
        name="racetrack[pricePerLap]"
        value="<%= racetrack.pricePerLap %>"
        required
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="description"
        >Enter the description:
      </label>
      <textarea
        class="form-control"
        type="text"
        id="description"
        name="racetrack[description]"
        required
      >
<%= racetrack.description %></textarea
      >
    </div>

    <button class="btn btn-primary-green">Save changes</button>
    <a class="btn btn-red" href="/racetracks/<% racetrack.id %>"
      >Quit editing and discard changes</a
    >
  </form>
</div>
