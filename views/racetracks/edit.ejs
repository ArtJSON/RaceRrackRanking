<% layout('layouts/boilerplate') %> 
<h1 class="text-center">Edit the data of <%= racetrack.name %></h1>
<div class="col-6 offset-3">
    <form action="/racetracks/<%= racetrack.id %>?_method=PATCH" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="name">Enter the name: </label>
            <input class="form-control" type="text" id="name" name="name" value="<%= racetrack.name %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Enter the location: </label>
            <input class="form-control" type="text" id="location" name="location" value="<%= racetrack.location %>" required>
        </div>

        <label class="form-label" for="pricePerLap">Enter the price per lap: </label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
            <input class="form-control" type="number" step="0.01" id="pricePerLap" name="pricePerLap" value="<%= racetrack.pricePerLap %>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="description">Enter the description: </label>
            <textarea class="form-control" type="text" id="description" name="description" required><%= racetrack.description %></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="img">Enter the image url: </label>
            <input class="form-control" type="text" id="img" name="img" value="<%= racetrack.img %>" required>
        </div>

        <div class="mb-3">
            <button class="btn btn-success">Save changes</button>
        </div>
    </form>
    <a class="btn btn-primary" href="/racetracks/<% racetrack.id %>">Quit editing and discard changes</a>
</div>