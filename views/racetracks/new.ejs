    <input type="text" id="name" name="name">
    <br>
    <br>

    <label for="pricePerLap">Enter the price per lap: </label>
    <input type="number" step="0.01" value="0" id="pricePerLap" name="pricePerLap">
    <br>
    <br>

    <label for="description">Enter the description: </label>
    <input type="text" id="description" name="description">
    <br>
    <br>

