<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Create new race track</h1>
    <div class="col-6 offset-3">
        <form class="validated-form" action="/racetracks" method="POST" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Enter the name: </label>
                <input class="form-control" type="text" id="name" name="racetrack[name]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Enter the location: </label>
                <input class="form-control" type="text" id="location" name="racetrack[location]" required>
            </div>
            
            <label class="form-label" for="pricePerLap">Enter the price per lap: </label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                <input class="form-control" type="number" step="0.01" value="0.00" id="pricePerLap" name="racetrack[pricePerLap]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Enter the description: </label>
                <textarea class="form-control" type="text" id="description" name="racetrack[description]" required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="img">Enter the images: </label>
                <input class="form-control" type="file" id="img" name="racetrack[img]" required multiple>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add racetrack</button>
            </div>
        </form>
        <a class="btn btn-primary" href="/racetracks">Stop creating</a>
    </div>
</div>

