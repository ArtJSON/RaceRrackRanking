<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Create new race track</h1>
    <div class="col-6 offset-3">
        <form action="/racetracks" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Enter the name: </label>
                <input class="form-control" type="text" id="name" name="name">
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Enter the location: </label>
                <input class="form-control" type="text" id="location" name="location">
            </div>
            
            <label class="form-label" for="pricePerLap">Enter the price per lap: </label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                <input class="form-control" type="number" step="0.01" value="0.00" id="pricePerLap" name="pricePerLap">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Enter the description: </label>
                <textarea class="form-control" type="text" id="description" name="description"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="img">Enter the image url: </label>
                <input class="form-control" type="text" id="img" name="img">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add racetrack</button>
            </div>
        </form>
        <a href="/racetracks">Quit editing</a>
    </div>
</div>