<% layout('layouts/boilerplate') %> 
<h1>Our race tracks: </h1>

<% for( let racetrack of racetracks ) { %>
    <div class="card my-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid w-100" alt="MISSING JPG" src="<%= racetrack.img[0] ? racetrack.img[0].url : 'img/noimg.jpg' %>">
            </div>
            <div class="col-md-8">
                <h5 class="card-title" ><%= racetrack.name %></h5>
                <p class="card-text"><%= racetrack.description %></p>
                <p>
                    <small class="text-location"><%= racetrack.location %></small>
                </p>
                <a class="btn btn-primary" href="/racetracks/<%= racetrack.id %>">Details</a>
            </div>
        </div>
    </div>
<% } %>