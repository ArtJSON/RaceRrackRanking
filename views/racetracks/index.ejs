<% layout('layouts/boilerplate') %>
<h1>Our race tracks:</h1>
<div class="racetrack-card-container">
  <% for( let racetrack of racetracks ) { %>
  <div class="racetrack-card">
    <img
      class="card-img"
      alt="MISSING JPG"
      src="<%= racetrack.img[0] ? racetrack.img[0].url : 'img/noimg.jpg' %>"
    />
    <div class="card-content">
      <h5 class="card-title"><%= racetrack.name %></h5>
      <p class="card-text"><%= racetrack.description %></p>
      <p>
        <small class="text-location"><%= racetrack.location %></small>
      </p>
      <a class="btn btn-primary" href="/racetracks/<%= racetrack.id %>"
        >Details</a
      >
    </div>
  </div>
  <% } %>
</div>
