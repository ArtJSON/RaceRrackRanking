<% layout('layouts/boilerplate') %>
<div class="show-header-container">
  <div class="show-header">
    <h1 class="show-header-text">Our racetracks</h1>
  </div>
</div>
<div class="racetrack-card-container">
  <% for( let racetrack of racetracks ) { %>
  <div class="racetrack-card">
    <img
      class="card-img"
      alt="MISSING JPG"
      src="<%= racetrack.img[0] ? racetrack.img[0].carousel : 'img/noimg.jpg' %>"
    />
    <div class="card-content">
      <div class="text-content">
        <h2 class="card-title"><%= racetrack.name %></h2>
        <hr />
        <p>
          <small class="text-location"><%= racetrack.location %></small>
        </p>
        <hr />
        <p class="card-text"><%= racetrack.description %></p>
      </div>
      <div class="btn-content">
        <a class="btn btn-primary-green" href="/racetracks/<%= racetrack.id %>"
          >Details</a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>
