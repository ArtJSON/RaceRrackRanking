<div class="flash-container">
  <% if(success && success.length) {%>
  <div class="flash flash-primary" role="alert">
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    >
    &#x2715
    </button>
  </div>
  <% } %> <% if(error && error.length) {%>
  <div class="flash flash-danger" role="alert">
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    >
    &#x2715
    </button>
  </div>
  <% } %>
</div>
<script src="/scripts/flash.js"></script>
