<% layout('layouts/boilerplate') %>
<div class="header-container">
  <header class="header">
    <div class="header-text-box">
      <% if (racetrack) { %>
      <div class="racetrack-card-container">
        <span class="header-heading">Our suggestion for today:</span>
        <div class="racetrack-card">
          <img
            class="card-img"
            alt="MISSING JPG"
            src="<%= racetrack.img[0] ?
      racetrack.img[0].carousel : 'img/noimg.jpg' %>"
          />
          <div class="card-content">
            <div class="text-content">
              <h2 class="card-title text-content-element">
                <%= racetrack.name %>
              </h2>
              <p class="text-location text-content-element">
                <%= racetrack.location %>
              </p>
              <p class="card-text text-content-element">
                <%= racetrack.description %>
              </p>
              <p class="card-text text-content-element">
                <% if (racetrack.avg != -1) { %> 
                <p class="starability-result" data-rating="<%=Math.floor(racetrack.avg)%>">
                  Rated: <%= racetrack.avg %> stars
                </p>
                <p >Average rating: <%= racetrack.avg %></p>
                <% } else { %> No reviews <% } %>
              </p>
              <div class="btn-content">
                <a
                  class="btn btn-primary-green"
                  href="/racetracks/<%= racetrack.id %>"
                  >Details</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <div class="move-in-bottom">
        <span class="header-heading">Check our full race track offer:</span>
        <div class="btn-container btn-container-center">
          <a
            class="btn btn-lg btn-primary-green move-in-left"
            href="/racetracks"
            >Find your dream race track</a
          >
        </div>
      </div>
    </div>
  </header>
</div>
