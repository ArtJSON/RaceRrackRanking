<% layout('layouts/boilerplate') %> 
<div class="form-wrapper-md min-full-screen">
    <form class="form form-center" action="/login" method="POST" class="validated-form" novalidate>
        <h1 class="form-title">Login into your account</h1>
        <div class="form-group">
            <label class="form-label" for="username">Username: </label>
            <input class="form-control" type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label class="form-label" for="password">Password: </label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <button class="btn btn-lg btn-primary-green form-group">Login</button>
        <p class=" text-lg text-center">New to Race Track Ranking? <a class="text-primary-green bold" href="/register">Register here</a></p>
    </div>
</form>